@model Database.Models.RosterModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>RosterModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="semester_id" class="control-label"></label>
                <select asp-for="semester_id">
                
                    @for (int i = 0;i <ViewBag.SemesterIdCount ; i++)
                    {
                        
                       <option value="@ViewBag.Semesterid[i]">
                       @ViewBag.Semester[i]
                        </option>
                    }
                    

                </select>
                <span asp-validation-for="semester_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="staff_id" class="control-label"></label>
                <select asp-for="staff_id">

                    @for (int i = 0; i < ViewBag.StaffIdCount; i++)
                    {

                        <option value="@ViewBag.Staffid[i]">
                            @ViewBag.StaffName[i]
                        </option>
                    }


                </select>
                <span asp-validation-for="staff_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="role_id" class="control-label"></label>
                <select asp-for="role_id">

                    @for (int i = 0; i < ViewBag.RoleIdCount; i++)
                    {

                        <option value="@ViewBag.RoleId[i]">
                            @ViewBag.RoleName[i]
                        </option>
                    }


                </select>
                <span asp-validation-for="role_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
