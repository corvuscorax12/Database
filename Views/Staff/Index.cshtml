@model IEnumerable<Database.Models.StaffModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Staff Members</h1>
@using Microsoft.AspNetCore.Identity;

@inject SignInManager<UserModel> SignInManager
@if (!SignInManager.IsSignedIn(User))
{
       <p>Please Sign In</p>
        <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
}
else
{
<table class="table table-striped">
    <thead> 
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Email
            </th>
            <th>
                Phone
            </th>
            <th>
                    <a class="btn btn-primary btn-sm" asp-action="Create">New</a>
          
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.first_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.last_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phone_number)
            </td>
            <td class="d-flex">
                <a class="btn-primary btn" asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a class="btn btn-success "asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
}